QRadioButton::indicator::checked{
    font-weight: bold;
    border: 1px solid;
    border-color: white;
    border-radius: 5px;
    background-color: #CD4B00;
    width: 11px;
    height: 11px;
}

QRadioButton::indicator::unchecked{
    font-weight: bold;
    border: 3px solid;
    border-color: white;
    border-radius: 6px;
    background-color: white;
    width: 7px;
    height: 7px;
}

