    border: 0px;
}
QComboBox QAbstractItemView {
    background: #CD4B00;
}
QComboBox:!editable:on, QComboBox::drop-down:editable:on {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                stop: 0 #CA6104, stop: 0.4 #AE5406,
                                stop: 0.5 #AE5406, stop: 1.0 #924400);
    color: white;
}
QComboBox:!editable:off {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                stop: 0 #FFC38D, stop: 0.4 #FFA352,
                                stop: 0.5 #FC851D, stop: 1.0 #F27508);
    border: 3px solid #FFFFFF;
    color: white;
}



QPushButton {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                      stop: 0 #E1C3FF, stop: 0.4 #C68DFF,
                                      stop: 0.5 #C68DFF, stop: 1.0 #B873FD);
    outline: none;
    border-style: outset;
    border-width: 3px;
    border-top: 3px transparent;
    border-bottom: 3px transparent;
    border-left: 10px transparent;
    border-right: 10px transparent;
    border: 2px solid #AD64F6;
    border-radius: 3px;
    padding: 2px;
    font-weight: bold;
    /*
    
    color: white;
    */
}
QPushButton:hover:pressed {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                  stop: 0 #B873FD, stop: 0.4 #AB5AFC,
                                  stop: 0.5 #AB5AFC, stop: 1.0 #A046FA);
}
QPushButton:hover {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                      stop: 0 #E9D1FF, stop: 0.4 #D7A8FF,
                                      stop: 0.5 #D7A8FF, stop: 1.0 #B873FD);
}

QPushButton:checked {    
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2:1,
                                        stop:0 #2E104D, stop:0.4 #AB5AFC,
                                        stop:0.5 #AB5AFC, stop:1 #2E104D);
}

